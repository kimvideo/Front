<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--  오류는 버튼의 크기가 너무 작다고 뜨는 것  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlaylistActivity"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            tools:ignore="MissingConstraints" >



            <ImageButton
                android:id="@+id/backHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/back_page"
                android:background="@android:color/transparent"
                android:contentDescription=" "/>
        </FrameLayout>

        <!--  플레이리스트 정보  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--    플레이리스트 제목    -->
            <TextView
                android:id="@+id/playlistTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:text="데일리 리스트"/>

            <!--    곡 개수와 시간    -->
            <TextView
                android:id="@+id/playlistInfo"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="#808080"
                android:text="20곡 10분"/>

            <!--    해시태그    -->
            <TextView
                android:id="@+id/playlistHashtag"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text=""/>

        </LinearLayout>

        <!--  구분 선  -->
        <View
            android:layout_width="360dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#808080"/>

        <!--  리스트  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/playlist"
                android:layout_width="350dp"
                android:layout_height="370dp"
                tools:listitem="@layout/music_list_view"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

        <!--  구분 선  -->
        <View
            android:layout_width="360dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#808080" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/nowMusic">

            <!--    현재 재생중인 음악 이미지   -->
            <!--      현재 재생중인 음악의 정보로 변경되도록 구현 필요      -->
            <ImageView
                android:id="@+id/playMusicImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <!--    현재 재생 중인 음악의 제목   -->
                <TextView
                    android:id="@+id/playMusicTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:text="Title"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <!--    현재 재생중인 음악의 가수이름   -->
                <!--      현재 재생중인 음악의 정보로 변경되도록 구현 필요      -->
                <TextView
                    android:id="@+id/playMusicSinger"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:textSize="14sp"
                    android:text="Singer"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>

        <!--음악 재생 / 건너뛰기 / 이전 음악 버튼-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <!--이전 음악 버튼-->
            <ImageButton
                android:id="@+id/playPreviousMusic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:contentDescription=" "
                android:src="@drawable/skip_previous" />

            <!--재생 버튼-->
            <!-- 버튼을 눌렀을 때 정지 버튼과 이미지가 바뀌는 것 구현해야함 -->
            <ToggleButton
                android:id="@+id/playMusic"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/play_pause"
                android:textOff=""
                android:textOn="" />

            <!-- 음악 건너뛰기 버튼 -->
            <ImageButton
                android:id="@+id/playNextMusic"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:contentDescription=" "
                android:src="@drawable/skip_next" />

        </LinearLayout>

    </LinearLayout>

</layout>